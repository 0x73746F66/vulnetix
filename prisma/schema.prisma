// PRAGMA table_info(TABLE_NAME)
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model sessions {
  kid         String  @unique
  memberEmail String
  member      members @relation(fields: [memberEmail], references: [email])
  expiry      Int
  issued      Int
  secret      String?
  authn_ip    String?
  authn_ua    String?
}

model members {
  email                 String                  @id @unique
  orgName               String?
  passwordHash          String
  firstName             String?
  lastName              String?
  alertNews             Int                     @default(0)
  alertOverdue          Int                     @default(0)
  alertFindings         Int                     @default(0)
  alertType             Int                     @default(0)
  sarif                 sarif[]
  github_apps           github_apps[]
  git_repos             git_repos[]
  member_keys           member_keys[]
  sessions              sessions[]
  spdx                  spdx[]
  integration_usage_log integration_usage_log[]
  findings_sca          findings_sca[]
}

model member_keys {
  id          Int     @id @default(autoincrement())
  memberEmail String
  keyType     String
  member      members @relation(fields: [memberEmail], references: [email])
  secret      String
  suspend     Int     @default(0)
}

model github_apps {
  installationId String  @unique
  memberEmail    String
  member         members @relation(fields: [memberEmail], references: [email])
  accessToken    String
  created        Int
  expires        Int?
}

model git_repos {
  pk            String  @unique
  fullName      String  @id
  createdAt     Int
  updatedAt     Int
  pushedAt      Int
  defaultBranch String
  ownerId       Int
  memberEmail   String
  member        members @relation(fields: [memberEmail], references: [email])
  licenseSpdxId String?
  licenseName   String?
  fork          Int     @default(0)
  template      Int     @default(0)
  archived      Int     @default(0)
  visibility    String
  avatarUrl     String?
  sarif         sarif[]
  spdx          spdx[]
}

model sarif {
  sarifId      String          @unique
  reportId     String          @id
  fullName     String?
  repo         git_repos?      @relation(fields: [fullName], references: [fullName])
  source       String
  memberEmail  String
  member       members         @relation(fields: [memberEmail], references: [email])
  commitSha    String?
  ref          String?
  createdAt    Int
  resultsCount Int
  rulesCount   Int
  toolName     String?
  toolVersion  String?
  analysisKey  String?
  warning      String?
  results      sarif_results[]
}

model sarif_results {
  guid                String  @unique
  reportId            String
  sarif               sarif   @relation(fields: [reportId], references: [reportId])
  messageText         String
  ruleId              String
  locations           String?
  automationDetailsId String?
  rulesetName         String?
  level               String?
  description         String?
  helpMarkdown        String?
  securitySeverity    String?
  precision           String?
  tags                String?
}

model spdx {
  spdxId            String     @unique
  spdxVersion       String
  source            String
  repoName          String?
  repo              git_repos? @relation(fields: [repoName], references: [fullName])
  name              String?
  dataLicense       String?
  documentNamespace String?
  toolName          String?
  packageCount      Int
  createdAt         Int
  memberEmail       String
  member            members    @relation(fields: [memberEmail], references: [email])
  comment           String?
}

model integration_usage_log {
  id          Int     @id @default(autoincrement())
  memberEmail String
  source      String
  member      members @relation(fields: [memberEmail], references: [email])
  request     String
  response    String
  statusCode  Int
  createdAt   Int
}

model findings_sca {
  findingId       String  @unique
  memberEmail     String
  source          String
  member          members @relation(fields: [memberEmail], references: [email])
  createdAt       Int
  modifiedAt      Int
  detectionTitle  String
  purl            String?
  cpe             String?
  packageName     String
  packageVersion  String?
  licenseDeclared String?
  fixVersion      String?
  remediation     String?
  maliciousSource String?
  abandoned       Int?
  squattedPackage String?
  spdxId          String?
  cdxId           String?
}
